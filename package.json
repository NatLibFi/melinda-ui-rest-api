{
  "name": "melinda-ui-rest-api",
  "version": "1.0.0",
  "description": "Restfull api for melinda ui softwares",
  "main": "src/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "babel-node ./src/index",
    "test": "npm run lint",
    "lint": "eslint src",
    "lint:dev": "eslint --fix src",
    "dev": "NODE_ENV=development cross-env DEBUG=1 nodemon",
		"build": "babel src --source-maps --copy-files --delete-dir-on-start --out-dir=dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NatLibFi/melinda-ui-rest-api.git"
  },
  "keywords": [
    "melinda",
    "natlibfi"
  ],
  "author": "The National Library of Finland",
  "license": "AGPL-3.0+",
  "bugs": {
    "url": "https://github.com/NatLibFi/melinda-ui-rest-api/issues"
  },
  "homepage": "https://github.com/NatLibFi/melinda-ui-rest-api#readme",
  "dependencies": {
    "@babel/runtime": "^7.14.0",
    "@natlibfi/melinda-backend-commons": "^2.0.2",
    "@natlibfi/melinda-commons": "^11.1.3",
    "@natlibfi/passport-melinda-aleph": "^1.1.1",
    "@natlibfi/passport-melinda-jwt": "^1.0.1",
    "express": "^4.17.1",
    "passport": "^0.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/eslint-parser": "^7.14.7",
    "@babel/node": "^7.14.2",
    "@babel/preset-env": "^7.14.4",
    "@natlibfi/eslint-config-melinda-backend": "^1.0.6",
    "cross-env": "^7.0.3",
    "eslint": "^7.28.0",
    "nodemon": "^2.0.7"
  },
  "eslintConfig": {
    "extends": "@natlibfi/melinda-backend",
    "ignorePatterns": [
      "src/clients/*",
      "src/muuntaja/config/*"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": "maintained node versions"
        }
      ]
    ],
    "ignore": [
      "src/clients/*",
      "src/muuntaja/config/*"
    ]
  },
  "nodemonConfig": {
    "exec": "DEBUG=@natlibfi* npm run lint:dev && npm run start:dev",
    "watch": [
      "src/*"
    ],
    "ignore": [
      "src/clients/*"
    ],
    "ext": "js",
    "delay": 2.5
  }
}
